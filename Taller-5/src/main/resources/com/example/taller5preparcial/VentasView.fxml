<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="ventasPanel" spacing="20.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taller5preparcial.VentasController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>

    <HBox spacing="30.0" alignment="TOP_LEFT">
        <GridPane hgap="10.0" vgap="10.0" prefWidth="400.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Fecha:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="lblFecha" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>

            <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="cmbCliente" promptText="Seleccionar Cliente" maxWidth="1.7976931348623157E308" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Producto:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="cmbProducto" promptText="Seleccionar Producto" maxWidth="1.7976931348623157E308" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Cantidad:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="txtCantidad" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>

        <VBox spacing="10.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <Button fx:id="btnGuardar" text="Guardar Venta" prefWidth="120.0" onAction="#guardarVenta" VBox.vgrow="NEVER"/>

            <VBox spacing="5.0" alignment="TOP_LEFT" style="-fx-border-color: #cccccc; -fx-padding: 10;">
                <Label text="Detalles del CÃ¡lculo:" style="-fx-font-weight: bold;"/>
                <HBox spacing="5.0">
                    <Label text="Precio Unitario:" />
                    <Label fx:id="lblPrecioUnitario" text="0.00" style="-fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="5.0">
                    <Label text="Subtotal:" />
                    <Label fx:id="lblSubtotal" text="0.00" style="-fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

    <TableView fx:id="tablaVentas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colFecha" text="Fecha"/>
            <TableColumn fx:id="colCliente" text="Cliente"/>
            <TableColumn fx:id="colProducto" text="Producto"/>
            <TableColumn fx:id="colCantidad" text="Cantidad"/>
            <TableColumn fx:id="colPrecioUnitario" text="Precio Unitario"/>
            <TableColumn fx:id="colSubtotal" text="Subtotal"/>
        </columns>
    </TableView>
</VBox>