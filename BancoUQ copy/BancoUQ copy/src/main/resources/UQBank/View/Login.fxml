<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #E6E6E6; -fx-font-family: 'Arial', sans-serif;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UQBank.controller.LoginController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-padding: 30;">

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="UQ BANK" textFill="#a00000">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label text="ACCESO SEGURO" textFill="#666666">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>

            <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Correo Electrónico:" GridPane.rowIndex="0" />
            <TextField fx:id="emailField" promptText="usuario@gmail.com" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-padding: 8;" GridPane.rowIndex="1" />

            <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Contraseña:" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" promptText="••••••" style="-fx-background-radius: 3; -fx-border-color: #CCCCCC; -fx-padding: 8;" GridPane.rowIndex="3" />
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <Button maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: #A00000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 3; -fx-cursor: hand; -fx-padding: 10;" text="ACCEDER" />
    </VBox>

</VBox>
